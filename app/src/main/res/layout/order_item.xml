<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_price"
                android:text="price" android:layout_marginStart="85dp"
                app:layout_constraintStart_toEndOf="@+id/tv_product_quantity" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price_per_product"
                android:text="ppp" android:layout_marginStart="77dp"
                app:layout_constraintStart_toEndOf="@+id/tv_product_name" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_product_name"
                android:text="name" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:id="@+id/tv_product_quantity"
                android:text="quantity"
                android:layout_marginStart="77dp" app:layout_constraintStart_toEndOf="@+id/tv_price_per_product"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

</layout>