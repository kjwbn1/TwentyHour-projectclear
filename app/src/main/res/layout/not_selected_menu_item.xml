<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="16dp">

    <ImageView
            android:id="@+id/img_menu_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_menu_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/tv_menu_item_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="테스트용텍스터"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_menu_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <TextView
            android:id="@+id/tv_menu_item_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="테스트용텍스터"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"/>
    <TextView
            android:id="@+id/tv_menu_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="테스트용텍스터"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_item_name"
            app:layout_constraintBottom_toTopOf="@+id/tv_menu_item_price"
            app:layout_constraintStart_toEndOf="@+id/img_menu_item"/>
</android.support.constraint.ConstraintLayout>