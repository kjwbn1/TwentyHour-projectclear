<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryLightColor"
        tools:context=".CustomerClassificationActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다."
            android:textSize="24sp"
            android:fontFamily="@font/netmarbleb"
            android:textColor="@color/accentColor"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="158dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="138dp" android:layout_marginTop="117dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_customer_select" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>



    <Button
            android:id="@+id/btn_customer_select"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:text="개인고객"
            android:background="@color/primaryLightColor"
            android:textColor="@color/accentColor"
            android:fontFamily="@font/netmarblel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_owner_select"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="299dp" android:layout_marginTop="251dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"/>

    <Button
            android:id="@+id/btn_owner_select"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:text="직원"
            android:background="@color/primaryLightColor"
            android:fontFamily="@font/netmarblel"
            android:textColor="@color/accentColor"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_customer_select" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="251dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="299dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"/>


</android.support.constraint.ConstraintLayout>